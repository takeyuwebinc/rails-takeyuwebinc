<% title @announcement.title %>
<% description @announcement.content.to_plain_text.slice(0, 50) %>
<% content_for :breadcrumbs do %>
  <div class="px-5 sm:px-10">
    <%= render_breadcrumbs %>
  </div>
<% end %>

<% content_for :header do %>
  <header class="h-auto mb-">
    <div class="flex justify-between items-center dark py-2 px-5 sm:px-10 h-16 z-50 max-w-[960px] w-full mx-auto">
      <div>
        <%= link_to "/", class: "no-underline" do %>
          <%= image_tag 'logo.png', alt: "タケユー・ウェブ株式会社", class: "w-32" %>
        <% end %>
      </div>
      <nav class="flex space-x-4 justify-end">
        <ul class="invisible md:visible flex space-x-2 py-2">
          <li><a href="/services" class="text-white no-underline hover:underline">サービス</a></li>
          <li><a href="/works" class="text-white no-underline hover:underline">開発実績</a></li>
          <li><a href="/company" class="text-white no-underline hover:underline">企業情報</a></li>
        </ul>
        <%= render(GoastButtonComponent.new(href: new_contact_path)) do %>
          お問い合わせ
        <% end %>
      </nav>
    </div>
  </header>
<% end %>

<article class="flex-col space-y-5 w-full py-10">
  <%= render(SectionComponent.new(id: @announcement.to_slug, title: @announcement.title, title_en: @announcement.created_at.to_date)) do |section| %>
    <div><%= @announcement.content %></div>
    <% if @announcement.image.attached? %>
      <div class="px-5 sm:px-10">
        <%= image_tag (@announcement.image.variable? ? @announcement.image.variant(:default).processed : @announcement.image).url(expires_in: nil), class: "rounded-md" %>
      </div>
    <% end %>
  <% end %>
</article>
