<% title "お問い合わせ" %>
<% description "開発・技術支援に関するお問い合わせ・ご相談" %>
<% content_for :breadcrumbs do %>
  <div class="px-5 sm:px-10">
    <%= render_breadcrumbs %>
  </div>
<% end %>

<article class="flex-col space-y-5 w-full py-10  text-gray-900 dark:text-gray-100">
  <div class="px-5 sm:px-10">
    <h1 class="text-xl sm:text-2xl font-extralight border-b border-black dark:border-white mb-3 pb-3 mt-2">お問い合わせ</h1>
  </div>

  <div class="px-5 sm:px-10">
    <p>開発・技術支援に関するお問い合わせ・ご相談は、下記のフォームよりお気軽にお寄せください。</p>
    <%= turbo_frame_tag "new_contact" do %>
      <%= form_with model: @contact, html: { class: "mt-6", "data-controller": "csrf", "data-csrf-token-value": form_authenticity_token } do |form| %>
        <% if form.object.errors.any? %>
          <div class="rounded-md bg-red-50 p-4 mb-6">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">入力内容をご確認ください。</h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul role="list" class="list-disc space-y-1 pl-5">
                    <% form.object.errors.full_messages.each do |full_message| %>
                      <li><%= full_message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <div class="grid grid-cols-1 gap-x-8 gap-y-6">
          <div>
            <%= form.label :name, class: "block text-sm font-semibold leading-6" %>
            <div class="mt-2.5">
              <%= form.text_field :name, required: true, autocomplete: 'name', class: 'block w-full rounded-md border-0 px-3.5 py-2 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 dark:!bg-slate-900' %>
            </div>
          </div>
          <div>
            <%= form.label :company, class: "block text-sm font-semibold leading-6" %>
            <div class="mt-2.5">
              <%= form.text_field :company, required: true, autocomplete: 'organization', class: 'block w-full rounded-md border-0 px-3.5 py-2 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 dark:!bg-slate-900' %>
            </div>
          </div>
          <div>
            <%= form.label :email, class: "block text-sm font-semibold leading-6" %>
            <div class="mt-2.5">
              <%= form.email_field :email, required: true, autocomplete: 'email', class: 'block w-full rounded-md border-0 px-3.5 py-2 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 dark:!bg-slate-900' %>
            </div>
          </div>
          <div>
            <%= form.label :phone, class: "block text-sm font-semibold leading-6" %>
            <div class="mt-2.5">
              <%= form.phone_field :phone, required: true, autocomplete: 'tel-national', class: 'block w-full rounded-md border-0 px-3.5 py-2 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 dark:!bg-slate-900' %>
            </div>
          </div>
          <div>
            <%= form.label :message, class: "block text-sm font-semibold leading-6" %>
            <div class="mt-2.5">
              <%= form.text_area :message, required: true, rows: 4, class: '"block w-full rounded-md border-0 px-3.5 py-2 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 dark:!bg-slate-900' %>
            </div>
          </div>
          <div>
            <%= form.label :files, class: "block text-sm font-semibold leading-6" %>
            <div class="mt-2.5">
              <%= form.file_field :files, multiple: true, direct_upload: true %>
              <!-- エラー再入力時に、アップロード済みのファイルを引き継ぐ -->
              <% if @contact.files.attached? %>
                <div class="mt-2.5">
                  <% @contact.files.each do |file| %>
                    <%= form.hidden_field "files", multiple: true, value: file.blob.signed_id %>
                    <div><%= file.filename %></div>
                  <% end %>
                </div>
              <% end %>
            </div>
            <div>
              <p class="text-sm text-gray-500">※ 1ファイルあたり10MBまでアップロード可能です。</p>
              <p class="text-sm text-gray-500">※ JPEG, PNG, GIF, PDF, ZIP, TXT のみアップロード可能です。</p>
            </div>
          </div>
          <div class="h-0 overflow-hidden">
            <%= form.text_field :check %>
          </div>
        </div>
        <div class="mt-10">
          <%= form.submit "送信する", class: "block w-full rounded-md !bg-indigo-600 px-3.5 py-2.5 text-center text-sm font-semibold text-white shadow-sm hover:!bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
        </div>
      <% end %>
    <% end %>
  </div>
</article>

